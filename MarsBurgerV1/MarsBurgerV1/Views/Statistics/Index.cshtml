@using MarsBurgerV1.Utility
@{
    ViewBag.Title = "Index";

}
<h2>Index</h2>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    google.charts.setOnLoadCallback(drawChart2);

    function drawChart() {
        var names = @Html.Raw(Json.Encode(ViewBag.namesOfItems));
        var qun = @Html.Raw(Json.Encode(ViewBag.quantityOfItems));
        var data = google.visualization.arrayToDataTable([
            ['Ordered Meal', 'Amount Ordered'],
            [names[0], qun[0]],
            [names[1], qun[1]],
            [names[2], qun[2]],
            [names[3], qun[3]]
            
        ]);

        var options = {
            title: 'Ordered Meals Statistics'
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
    }
    function drawChart2() {
        var names = @Html.Raw(Json.Encode(ViewBag.sideNames));
        var qun = @Html.Raw(Json.Encode(ViewBag.sideQun));
        var data = google.visualization.arrayToDataTable([
            ['Ordered SideDishes', 'Amount Ordered'],
            [names[0], qun[0]],
            [names[1], qun[1]],
            [names[2], qun[2]],
            [names[3], qun[3]]
            
        ]);

        var options = {
            title: 'Ordered SideDishes Statistics'
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart2'));

        chart.draw(data, options);
    }
</script> 
<div class="row">
    <div id="piechart" style="width: 900px; height: 500px;"></div>
    <div id="piechart2" style="width: 900px; height: 500px;"></div>
</div>
<hr />
