@model MarsBurgerV1.Models.IndividualButtonPartial

@using MarsBurgerV1.Models

<td style="width:400px;">
    <div class="btn-group" role="group">
        @Html.Partial("_IndividualButtonPartial",
       new IndividualButtonPartial
       {
            Action = "Edit",
            ButtonType = "btn-primary",
            Glyph = "pencil",
            Text = "Edit",
            UserId = Model.UserId,
            AccountTypeId = Model.AccountTypeId,
            DrinkId = Model.DrinkId,
            AddonID = Model.AddonID,
            SideDishId = Model.SideDishId
       })
        @Html.Partial("_IndividualButtonPartial",
       new IndividualButtonPartial
       {
           Action = "Details",
           ButtonType = "btn-success",
           Glyph = "list",
           Text = "Details",
           UserId = Model.UserId,
           AccountTypeId = Model.AccountTypeId,
           DrinkId = Model.DrinkId,
           AddonID = Model.AddonID,
           SideDishId = Model.SideDishId
       })
    @Html.Partial("_IndividualButtonPartial",
       new IndividualButtonPartial
       {
           Action = "Delete",
           ButtonType = "btn-danger",
           Glyph = "trash",
           Text = "Delete",
           UserId = Model.UserId,
           AccountTypeId = Model.AccountTypeId,
           DrinkId = Model.DrinkId,
           AddonID = Model.AddonID,
           SideDishId = Model.SideDishId
       })
    </div>
</td>
