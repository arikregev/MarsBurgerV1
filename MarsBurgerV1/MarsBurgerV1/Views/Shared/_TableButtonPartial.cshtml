@model MarsBurgerV1.Models.IndividualButtonPartial

@using MarsBurgerV1.Models

<td style="width:400px;">
    <div class="btn-group" role="group">
        @Html.Partial("_IndividualButtonPartial",
       new IndividualButtonPartial
       {
            Action = "Edit",
            ButtonType = "btn-primary",
            Glyph = "pencil",
            Text = "Edit Button",
            UserId = Model.UserId,
            AccountTypeId = Model.AccountTypeId
       })
        @Html.Partial("_IndividualButtonPartial",
       new IndividualButtonPartial
       {
            Action = "Details",
            ButtonType = "btn-success",
            Glyph = "list",
            Text = "Details Button",
            UserId = Model.UserId,
            AccountTypeId = Model.AccountTypeId
       })
    @Html.Partial("_IndividualButtonPartial",
       new IndividualButtonPartial
       {
            Action = "Delete",
            ButtonType = "btn-danger",
            Glyph = "trash",
            Text = "Delete Button",
            UserId = Model.UserId,
            AccountTypeId = Model.AccountTypeId
       })
    </div>
</td>
