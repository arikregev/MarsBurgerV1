@model MarsBurgerV1.Models.OrderButtonPartial

@using MarsBurgerV1.Models

<td style="width:400px;">
    <div class="btn-group" role="group">
        @Html.Partial("_OrderButtonPartial",
    new OrderButtonPartial
    {
        Action = "Edit",
        ButtonType = "btn-primary",
        Glyph = "pencil",
        Text = "Edit",
        OrderId = Model.OrderId
        })
        @Html.Partial("_OrderButtonPartial",
       new OrderButtonPartial
       {
           Action = "Details",
           ButtonType = "btn-success",
           Glyph = "list",
           Text = "Details",
           OrderId = Model.OrderId
       })
    @Html.Partial("_OrderButtonPartial",
       new OrderButtonPartial
       {
           Action = "Delete",
           ButtonType = "btn-danger",
           Glyph = "trash",
           Text = "Delete",
           OrderId = Model.OrderId
       })
    </div>
</td>
